.section-wrapper#home-banner
  .section-title
    span Get recipes

  .section-content
    .section-content-desc
      span Scan the QR CODE of the item and get reommended RECIPE
    .banner#qr-code
      input.qrcode-text(type='text', size='16', placeholder='Tracking Code')
      label.qrcode-text-btn
        input#scanCamera(type='file', accept='image/*', capture='environment', onclick='return showQRIntro();', onchange='openQRCamera(this);', tabindex='-1')
      input.btn-go(type='button', value='Go', disabled)